<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ahmed.hyefa"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="26" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/hyefa_icon_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/hyefa_icon_app"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >

        <!-- Slider Screen -->
        <activity android:name="com.example.ahmed.hyefa.Intro.WelcomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Splash Activity -->
        <activity android:name="com.example.ahmed.hyefa.Intro.Splashscreen" />
        <activity
            android:name="com.example.ahmed.hyefa.Manager.Navigation"
            android:label="@string/title_activity_navigation"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.ahmed.hyefa.Manager.Employee" />
        <activity android:name="com.example.ahmed.hyefa.Manager.Distributor" />
        <activity android:name="com.example.ahmed.hyefa.Manager.Announcement" />
        <activity android:name="com.example.ahmed.hyefa.Manager.TaskDetail" />
        <activity android:name="com.example.ahmed.hyefa.Manager.Message" />

        <!-- Employee -->
        <activity android:name="com.example.ahmed.hyefa.Employee.Emp_Announcement_Manager" />
        <activity android:name="com.example.ahmed.hyefa.Employee.Task_Detail_Employee" />

        <!-- Distributor -->
        <activity android:name="com.example.ahmed.hyefa.Distributor.Dist_Announcement_Manager" />
        <activity android:name="com.example.ahmed.hyefa.Distributor.Task_Detail_Distributor" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>